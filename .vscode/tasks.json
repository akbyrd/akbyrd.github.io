{
	"version": "2.0.0",
	"problemMatcher": {
		"fileLocation": "absolute",
		"source": " ",
		"owner": "hugo",
		"pattern": {
			// severity [msg1: ]*"file[:line:column]": [msg2: ]msg3
			"regexp": "^(\\w+):? [^\"]* \"((?:\\w:)?[^:\"]*)(?::(\\d+):(\\d+))?\": (?:.*: unmarshal failed: )?(.*)",
			"severity": 1,
			"file": 2,
			"line": 3,
			// BUG: vscode will change column if it's a word break character
			"column": 4,
			"message": 5,
		},
		"background": {
			"activeOnStart": true,
			"beginsPattern": "^Source changed",
			"endsPattern": "^Total in [0-9]+",
		},
	},
	"presentation": {
		"echo": false,
		"showReuseMessage": false,
		"clear": true,
		"revealProblems": "onProblem",
	},
	"tasks": [
		{
			"label": "vcs",
			"dependsOn": "vcs-git"
		},
		{
			"label": "build-solution",
			"detail": "hugo build",
			"type": "shell",
			"command": "hugo",
		},
		{
			"label": "test-solution",
			"detail": "hugo test",
			"type": "shell",
			"command": "hugo && Start-Process http://localhost:1313/ && hugo server --navigateToChanged",
		},
	],
}
